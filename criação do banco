CREATE TABLE cliente_saldo (
    id               INTEGER         PRIMARY KEY AUTOINCREMENT,
    cliente          VARCHAR (1, 20),
    saldo            VARCHAR,
    data_modificacao VARCHAR,
    usuario_logado   VARCHAR
);

CREATE TABLE produtos (
    id           INTEGER PRIMARY KEY AUTOINCREMENT,
    produto_nome VARCHAR,
    preco        VARCHAR
);

CREATE TABLE pedidos (
    id               INTEGER         PRIMARY KEY AUTOINCREMENT,
    nome_cliente     VARCHAR (1, 20),
    produto          VARCHAR (1, 20),
    quantidade       VARCHAR (1, 5),
    data_modificacao VARCHAR
);